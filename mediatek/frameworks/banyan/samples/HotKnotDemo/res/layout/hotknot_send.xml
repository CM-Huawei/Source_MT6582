<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:padding="10dp"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/sendMessageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotknot_send_message" />
    <Button
        android:id="@+id/setMessageCbBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotknot_set_message_cb_btn" />
    <Button
        android:id="@+id/sendBeamUriBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_hotknot_beam_uri_btn" />
        
    <Button
        android:id="@+id/setBeamUriCbBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_hotknot_beam_cb_btn" />    
</LinearLayout>
