<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Next view is another linear layout manager, now horizontal.  We
         give it a custom background; see colors.xml for the definition
         of drawable/semi_black-->
    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@drawable/semi_black">

        <Button android:id="@+id/testlog" style="@style/ActionButton"
            android:text="@string/testlog" />

        <Button android:id="@+id/testxlog" style="@style/ActionButton"
            android:text="@string/testxlog" />

        <Button android:id="@+id/testperf" style="@style/ActionButton"
            android:text="@string/testperf" android:textColor="@color/red" />

    </LinearLayout>

</LinearLayout>


