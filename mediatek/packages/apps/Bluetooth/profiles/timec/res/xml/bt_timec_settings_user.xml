<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="@string/bt_timec_sync_settings_title"
			android:key="bt_timec_sync_settings_group">
	    <Preference android:key="bt_timec_sync"
				android:title="@string/bt_timec_sync_title"
				android:summary="@string/bt_timec_sync_summary" />

		<CheckBoxPreference android:key="bt_timec_auto"
				android:title="@string/bt_timec_auto_title"
				android:summary="@string/bt_timec_auto_summary" />

		<ListPreference android:key="bt_timec_repeat"
				android:title="@string/bt_timec_repeat_title"
				android:entries="@array/bt_timec_repeat_entries"
				android:entryValues="@array/bt_timec_repeat_values"
				android:defaultValue="720" />
	</PreferenceCategory>

</PreferenceScreen>
