<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_frame">
    <RelativeLayout
            android:background="@drawable/windows_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <com.mediatek.videofavorites.FixedFrameLayout
                android:layout_alignParentTop="true"
                android:id="@+id/video_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/thumb"
                    android:contentDescription="@string/img_thumb_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            <com.mediatek.videofavorites.RemoteVideoView
                    android:id="@+id/video"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <FrameLayout android:id ="@+id/frame_delete"
                    android:visibility="invisible"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:clickable="true">
                <ImageView
                        android:id="@+id/icon_delete"
                        android:contentDescription="@string/img_del_desc"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="top|end"
                        android:src="@drawable/btn_delete"/>
            </FrameLayout>
        </com.mediatek.videofavorites.FixedFrameLayout>
        <TextView
                style="@style/fadingText"
                android:id="@+id/caption"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/video_root"
                android:layout_alignEnd="@id/video_root"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:paddingStart="15px"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:minHeight="30px"
                android:background="@drawable/windows_name_bg_am"/>
    </RelativeLayout>
</FrameLayout >
