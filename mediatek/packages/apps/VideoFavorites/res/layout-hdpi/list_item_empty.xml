<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/empty_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:background="@drawable/windows_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <!-- set this layout clickable to prevent background being hilighted -->
        <com.mediatek.videofavorites.FixedFrameLayout
                android:layout_alignParentTop="true"
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"/>
        <TextView
                android:id="@+id/caption"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/empty_root"
                android:layout_alignEnd="@id/empty_root"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:paddingStart="6px"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:lines="1"
                android:minHeight="40px"
                android:background="@drawable/windows_name_bg_am"/>
    </RelativeLayout>
</FrameLayout >
