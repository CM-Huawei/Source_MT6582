<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/favorite_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_frame">
    <RelativeLayout
            android:background="@drawable/windows_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <com.mediatek.videofavorites.FixedFrameLayout
                android:layout_alignParentTop="true"
                android:id="@+id/video_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_new"
                android:contentDescription="@string/img_new_desc"
                android:src="@drawable/wd_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:layout_gravity="center"/>
        </com.mediatek.videofavorites.FixedFrameLayout>
        <TextView
                android:id="@+id/caption"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/favorite_new"
                android:layout_alignEnd="@id/favorite_new"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:paddingStart="6px"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:lines="1"
                android:minHeight="40px"
                android:background="@drawable/windows_name_bg_am"/>
    </RelativeLayout>
</FrameLayout>
