

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/rtl_video_setting"
		android:layout_width="0dip"
		android:layout_height="0dip"			
		android:orientation="vertical"
		android:visibility="invisible"
		android:background="@color/setting_background">
		<ImageView
			android:id="@+id/imv_video_setting_seperator"
			android:layout_height="fill_parent"
			android:layout_width="2dp"
			android:layout_alignParentLeft="true"
			android:background="@color/setting_seperator"
			/>
		<TextView  
			android:id="@+id/txt_video_title"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:layout_alignParentTop="true"
		    android:layout_toRightOf="@id/imv_video_setting_seperator"
		    android:text="@string/video_setting"
		    android:padding="5dp"
		    android:singleLine="true"
                    android:textColor="@color/setting_title_color"
			android:background="@color/title_background"		    
		    />
	    <ImageView
			android:id="@+id/imv_video_setting_seperator_title0"
			android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:layout_below="@id/txt_video_title"
			android:layout_alignParentLeft="true"
                        android:layout_marginLeft="2dp"
			android:background="@color/setting_title_seperator"
			/>
		<TextView  
			android:id="@+id/txt_brightness"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
	        android:textColor="#ffffffff"		    
		    android:layout_below="@id/imv_video_setting_seperator_title0"
		    android:layout_toRightOf="@id/imv_video_setting_seperator"
		    android:text="@string/brightness"
		    android:padding="5dp"
		    android:singleLine="true"
		    />
	    <ImageView
			android:id="@+id/imv_video_setting_seperator_title1"
			android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:layout_below="@id/txt_brightness"
			android:layout_alignParentLeft="true"
			android:background="@color/setting_seperator"
			/>
		<SeekBar 
			android:id="@+id/sek_brightness" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_below="@id/imv_video_setting_seperator_title1"
			android:layout_alignLeft="@id/txt_brightness"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="21dp"
			android:paddingRight="21dp"
			/>
		<TextView  
			android:id="@+id/txt_contrast"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:layout_below="@id/sek_brightness"
        	android:layout_marginTop="20dip"		    		    
		    android:layout_alignLeft="@id/txt_brightness"
	        android:textColor="#ffffffff"		    
		    android:text="@string/contrast"
		    android:padding="5dp"
		    android:singleLine="true"
		    />
	    <ImageView
			android:id="@+id/imv_video_setting_seperator_title2"
			android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:layout_below="@id/txt_contrast"
			android:layout_alignParentLeft="true"
			android:background="@color/setting_seperator"
			/>
		<SeekBar 
			android:id="@+id/sek_contrast" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_below="@id/imv_video_setting_seperator_title2"
			android:layout_alignLeft="@id/txt_brightness"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="21dp"
			android:paddingRight="21dp"
			/>
		<TextView  
			android:id="@+id/txt_saturation"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
	        android:textColor="#ffffffff"		    
		    android:layout_below="@id/sek_contrast"
        	android:layout_marginTop="20dip"		    
		    android:layout_alignLeft="@id/txt_brightness"
		     android:text="@string/saturation"
		    android:padding="5dp"
		    android:singleLine="true"
		    />
	    <ImageView
			android:id="@+id/imv_video_setting_seperator_title3"
			android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:layout_below="@id/txt_saturation"
			android:layout_alignParentLeft="true"
			android:background="@color/setting_seperator"
			/>
		<SeekBar 
			android:id="@+id/sek_saturation" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_below="@id/imv_video_setting_seperator_title3"
			android:layout_alignLeft="@id/txt_brightness"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="21dp"
			android:paddingRight="21dp"
			/>		
	</RelativeLayout>
