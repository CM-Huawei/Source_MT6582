<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/single_choice_setting"
		android:layout_height="0dip"
		android:layout_width="0dip"
		android:layout_alignParentRight="true"
		android:orientation="vertical"
		android:background="@color/setting_background"			
		android:visibility="invisible">
		<ImageView
			android:id="@+id/list_seperator"		
			android:layout_height="fill_parent"
			android:layout_width="2dp"
			android:layout_alignParentLeft="true"
			android:background="@color/setting_seperator"
			/>
		<TextView  
			android:id="@+id/list_title"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:layout_alignParentTop="true"
		    android:layout_toRightOf="@id/list_seperator"
		    android:padding="5dp"
		    android:singleLine="true"
                    android:textColor="@color/setting_title_color"
			android:background="@color/title_background"		    
		    />
	    <ImageView
			android:id="@+id/list_title_seperator"	    
			android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:layout_below="@id/list_title"
			android:layout_alignParentLeft="true"
                        android:layout_marginLeft="2dp"
			android:background="@color/setting_title_seperator"
			/>
		<ListView 
			android:id="@+id/single_list_view"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/list_title_seperator"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
			android:padding="5dp"
			/>
	</RelativeLayout>
