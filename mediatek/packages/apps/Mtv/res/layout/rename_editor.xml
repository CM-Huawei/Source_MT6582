<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/rename_editor"
		android:layout_height="0dip"
		android:layout_width="0dip"
		android:orientation="vertical"
		android:visibility="invisible"
		android:background="@color/panel_background">

    <TextView 
        android:id="@+id/rename_hint"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="@string/new_channel_name"
        android:gravity="left"
        android:textColor="@color/setting_title_color"
        android:textAppearance="?android:attr/textAppearanceSmall" /> 
        
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_below="@id/rename_hint"	            
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">        
    <EditText
        android:id="@+id/rename_box"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"        
        android:layout_marginLeft="10dip"
        android:scrollHorizontally="true"
        android:autoText="false"
        android:capitalize="none"
        android:gravity="fill_horizontal"
        android:inputType="textPersonName"        
        android:maxLength="20"
        android:imeOptions="actionDone"
        android:textAppearance="?android:attr/textAppearanceMedium" /> 
    <Button
        android:id="@+id/rename_button_ok"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/rename_box"						
		android:layout_marginLeft="20dip"					
        android:gravity="center"					
        android:text="@string/android:ok" />  
	</LinearLayout>   
</RelativeLayout>
	
