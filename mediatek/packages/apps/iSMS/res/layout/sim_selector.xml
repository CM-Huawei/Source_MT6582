<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp" >

            <ImageView
                android:id="@+id/sim_icon"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical"
                android:duplicateParentState="true"
                android:scaleType="fitXY"
                android:src="@drawable/select_sim_bg" />

            <ImageView
                android:id="@+id/sim_status"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:duplicateParentState="true"
                android:scaleType="fitCenter"
                android:src="@drawable/isms" />
            
            <TextView
                android:id="@+id/sim_number_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="12sp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:includeFontPadding="false"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/sim_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff000000" />
            <TextView
                android:id="@+id/sim_number"
                android:layout_below="@+id/sim_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ff000000" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>