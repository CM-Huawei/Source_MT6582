<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <ImageView
        android:id="@+id/iv_thumb_path"
        android:layout_width="@dimen/all_media_thumb_width"
        android:layout_height="@dimen/all_media_thumb_height"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_thumb_border"
        android:layout_width="@dimen/all_media_thumb_width"
        android:layout_height="@dimen/all_media_thumb_height"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:background="@drawable/all_media_border"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/all_media_video_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>