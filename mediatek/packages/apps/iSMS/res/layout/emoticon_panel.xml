<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_emoticon_panel"
    android:layout_width="fill_parent"
    android:layout_height="200dip"
    android:background="@drawable/isms_emoticons_background"
    android:orientation="vertical" >

    <com.hissage.ui.view.NmsLevelControlLayout
        android:id="@+id/emoticon_panel_zone"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" />

    <RadioGroup
        android:id="@+id/rg_share_dot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_dot_first"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_margin="6dip"
            android:button="@drawable/radio_selector"
            android:enabled="false" />

        <RadioButton
            android:id="@+id/rb_dot_sec"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_margin="6dip"
            android:button="@drawable/radio_selector"
            android:enabled="false" />

        <RadioButton
            android:id="@+id/rb_dot_third"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_margin="6dip"
            android:button="@drawable/radio_selector"
            android:enabled="false" />

        <RadioButton
            android:id="@+id/rb_dot_forth"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_margin="6dip"
            android:button="@drawable/radio_selector"
            android:enabled="false" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dip"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/smiley_panel_btn_group"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_weight="5.0"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/smiley_panel_normal"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_weight="1.0"
                android:addStatesFromChildren="true"
                android:background="@drawable/smiley_tab_bg"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/smiley_panel_normal_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/default_selector"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:checked="true" />
                
            </FrameLayout>

            <FrameLayout
                android:id="@+id/smiley_panel_xm"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_weight="1.0"
                android:addStatesFromChildren="true"
                android:background="@drawable/smiley_tab_bg"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/smiley_panel_xm_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xm_selector"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:checked="false" />
                   <ImageView 
                    android:id="@+id/smiley_panel_xm_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:src="@drawable/emotion_unread_prompt"
                    android:visibility="gone"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/smiley_panel_ad"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_weight="1.0"
                android:addStatesFromChildren="true"
                android:background="@drawable/smiley_tab_bg"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/smiley_panel_ad_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ad_selector"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:checked="false" />
                   <ImageView 
                       android:id="@+id/smiley_panel_ad_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:src="@drawable/emotion_unread_prompt"
                     android:visibility="gone"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/smiley_panel_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_weight="1.0"
                android:addStatesFromChildren="true"
                android:background="@drawable/smiley_tab_bg"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/smiley_panel_dynamic_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rabbit_selector"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:checked="false" />
                   <ImageView 
                       android:id="@+id/smiley_panel_dynamic_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:src="@drawable/emotion_unread_prompt"
                     android:visibility="gone"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/smiley_panel_large"
                android:layout_width="wrap_content"
                android:layout_height="38dip"
                android:layout_weight="1.0"
                android:addStatesFromChildren="true"
                android:background="@drawable/smiley_tab_bg"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/smiley_panel_large_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dragon_selector"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:checked="false" />
                
                   <ImageView 
                    android:id="@+id/smiley_panel_large_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:src="@drawable/emotion_unread_prompt"
                     android:visibility="gone"
                    />
            </FrameLayout>
        </RadioGroup>

        <Button
            android:id="@+id/smiley_panel_del_btn"
            android:layout_width="wrap_content"
            android:layout_height="38dip"
            android:layout_weight="1.0"
            android:background="@drawable/delete_tab_selector" />
    </LinearLayout>

</LinearLayout>