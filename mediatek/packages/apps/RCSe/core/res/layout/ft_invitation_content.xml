<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp" >

    <RelativeLayout
        android:id="@+id/layout_warning"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="8dp" >
        
	    <ImageView
	        android:id="@+id/image_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxWidth="46dp"
	        android:minWidth="20dp"
	        android:paddingLeft="6dp"
	        android:paddingTop="8dp" >
	    </ImageView>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/image_type"
	        android:paddingLeft="5dp"
	        android:paddingTop="4dp">
	
	        <TextView
	            android:id="@+id/image_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
                android:ellipsize="middle"
	            android:textColor="#191919"
	            android:textSize="20sp"
	            android:visibility="visible" />
	
	        <TextView
	            android:id="@+id/image_size"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/image_name"
	            android:paddingTop="4dp"
	            android:singleLine="true"
	            android:textColor="#191919"
	            android:textSize="16sp"
	            android:visibility="visible" />
	    </RelativeLayout>
    </RelativeLayout>
    
	<TextView
	    android:id="@+id/warning_message"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="12dp"
	    android:paddingBottom="5dp"
	    android:layout_below="@id/layout_warning"
	    android:text="@string/file_size_warning_message"
	    android:textColor="#191919"
	    android:textSize="18sp"
	    android:visibility="visible"/>
</RelativeLayout>