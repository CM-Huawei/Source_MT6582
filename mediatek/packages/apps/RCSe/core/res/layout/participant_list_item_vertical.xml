<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp" >

    <com.mediatek.rcse.activities.widgets.AsyncImageView
        android:id="@+id/peer_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_header" />

    <TextView
        android:id="@+id/participant_status"
        android:layout_width="32dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/peer_avatar"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dp"
        android:background="#cc272727"
        android:textColor="#ffffff"
        android:textSize="8dp"
        android:gravity="center"
        android:visibility="visible" />

<TextView
        android:id="@+id/remote_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/peer_avatar"
        android:layout_toRightOf="@id/peer_avatar"
        android:ellipsize="end"
        android:paddingLeft="6dp"
        android:singleLine="true"
        android:textColor="#191919"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/is_typing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_toRightOf="@id/peer_avatar"
        android:layout_below="@id/remote_name"
        android:textColor="#7e7e7e"
        android:textSize="14sp"
        android:layout_alignBottom="@id/peer_avatar"
        android:visibility="invisible"/>

</RelativeLayout>