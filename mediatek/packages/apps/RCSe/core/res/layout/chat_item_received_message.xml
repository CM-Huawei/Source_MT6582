 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp" >
    
    <com.mediatek.rcse.activities.widgets.AsyncAvatarView
        android:id="@+id/peer_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_header" />
    <TextView 
        android:id="@+id/remote_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/peer_avatar"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/peer_avatar"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingLeft="8dp"
        android:textColor="#515151"
        android:textSize="12sp" />
    <com.mediatek.rcse.activities.widgets.DateView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/peer_avatar"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/remote_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingLeft="8dp"
        android:textColor="#515151"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/chat_message_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_time"
        android:layout_toRightOf="@id/peer_avatar"
        android:background="@drawable/back_ground_received_message"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp" >
        
        <TextView
            android:id="@+id/chat_text_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="186dp"
            android:minWidth="10dp"
            android:textColor="#191919"
            android:textSize="16sp"
            android:autoLink="web|email|phone"
            android:linksClickable="false" />

    </RelativeLayout>

</RelativeLayout>