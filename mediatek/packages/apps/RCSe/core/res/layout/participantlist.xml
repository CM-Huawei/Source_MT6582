<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:background="#ffffff" >

    <com.mediatek.rcse.activities.widgets.AsyncImageView
        android:id="@+id/peer_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        androidrc="@drawable/default_header" />

    <TextView
        android:id="@+id/participant_status"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/peer_avatar"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:background="#cc272727"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="8dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/remote_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/peer_avatar"
        android:layout_toRightOf="@id/peer_avatar"
        android:ellipsize="end"
        android:paddingLeft="6dp"
        android:singleLine="false"
        android:textColor="#191919"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/is_typing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/peer_avatar"
        android:layout_below="@id/remote_name"
        android:layout_toRightOf="@id/peer_avatar"
        android:ellipsize="end"
        android:textColor="#7e7e7e"
        android:textSize="14sp"
        android:visibility="invisible" />
    <ImageView
	  android:id="@+id/under_line"
	  android:layout_width="match_parent"
	  android:layout_marginLeft="12dp"
	  android:layout_marginRight="12dp"
	  android:layout_height="1dp"
	  android:layout_alignParentBottom="true"
	  android:background="@*android:drawable/list_divider_holo_light" />


</RelativeLayout>