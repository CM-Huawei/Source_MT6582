<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent" 
	    android:layout_height="64dp"
	    android:paddingLeft="12dp"
	    android:paddingRight="12dp"
	    android:paddingTop="8dp"
	    android:paddingBottom="8dp"
	    android:background="#FFFFFF">
	    <RelativeLayout
	        android:id="@+id/invite_contact"
	        android:layout_alignParentLeft="true"
	        android:layout_width="48dp"
	        android:layout_height="match_parent"
	        android:clickable="true">
	        <com.mediatek.rcse.activities.widgets.AsyncAvatarView
	            android:id="@+id/invite_contact_quick"
	            android:layout_alignParentLeft="true" 
	            android:layout_width="48dp"
	            android:layout_height="48dp"
	            android:src="@drawable/default_header"/>
	    </RelativeLayout>
	    <RelativeLayout android:layout_width="wrap_content"
	        android:layout_height="48dp" 
	        android:layout_toLeftOf="@+id/invite_date"
	        android:layout_toRightOf="@+id/invite_contact"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:gravity="left|center_vertical">
	        <TextView android:id="@+id/invite_infor"
	            android:layout_width="wrap_content" 
	            android:layout_height="match_parent"
	            android:gravity="center_vertical" 
	            android:maxLines="2" 
	            android:ellipsize="end"
	            android:textColor="#333333" 
	            android:textSize="16sp"/>
	    </RelativeLayout>
	    <com.mediatek.rcse.activities.widgets.DateView android:id="@+id/invite_date" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true" 
	        android:paddingLeft="8dp" 
	        android:textColor="#2B2B2B"
	        android:maxLines="1"
	        android:textSize="12sp"/>
	</RelativeLayout>
	
	<ImageView
		android:id="@+id/under_line"
		android:layout_width="match_parent"
		android:layout_marginLeft="12dp"
	    android:layout_marginRight="12dp"
		android:layout_height="1dp"
		android:layout_alignParentBottom="true"
		android:background="@*android:drawable/list_divider_holo_light" />
</RelativeLayout>