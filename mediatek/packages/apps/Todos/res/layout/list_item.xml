<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Item" android:orientation="horizontal">
    <TextView android:id="@+id/item_text" android:layout_width="match_parent"
        android:layout_height="@dimen/BodyLineHeight" android:layout_marginStart="@dimen/BodyMarginLeft"
        android:layout_marginEnd="@dimen/DescriptionTextMarginRight"
        android:gravity="start|bottom" android:singleLine="true"
        android:ellipsize="end" android:textSize="@dimen/DescriptionTextSize"
        android:textColor="@color/DescriptionTextColor"
        android:textDirection="locale" />

    <ImageView android:id="@+id/item_state" android:layout_width="wrap_content"
        android:layout_height="@dimen/BodyLineHeight" android:layout_below="@id/item_text"
        android:layout_alignParentStart="true" android:layout_marginStart="@dimen/BodyMarginLeft"
        android:src="@drawable/todos_ic_unexpire" />

    <TextView android:id="@+id/item_due_date" android:layout_width="match_parent"
        android:layout_height="@dimen/BodyLineHeight" android:layout_below="@id/item_text"
        android:layout_toEndOf="@id/item_state" android:gravity="start|center"
        android:layout_marginStart="@dimen/BodyMarginLeft" android:text="@string/no_expire_date"
        android:textSize="@dimen/DueDateTextSize" android:textColor="@color/DueDateTextColor"
        android:textDirection="locale" />

    <ImageView android:id="@+id/change_info_state" style="@style/TodoImgButton"
        android:layout_alignParentEnd="true" android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/BodyMarginRight" android:src="@drawable/todos_ic_todo_done" />

        <CheckBox android:id="@+id/item_checkbox" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_centerInParent="true" android:layout_marginEnd="@dimen/BodyCheckBoxMarginRight" android:clickable="false"
            android:focusable="false" />
</RelativeLayout>
