                android:layout_width="155dip"
                android:layout_height="wrap_content"
                android:text="@string/wifi_go" >
            </Button>

            <Button
                android:id="@+id/WiFi_Stop"
                android:layout_width="155dip"
                android:layout_height="wrap_content"
