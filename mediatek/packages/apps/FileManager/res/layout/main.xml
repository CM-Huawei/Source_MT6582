<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whole_view" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListView android:id="@+id/list_view" android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_below="@id/bar_background" />

    <View android:id="@+id/popup_menu_base_line_portrait"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />

    <View android:id="@+id/popup_menu_base_line_landscape"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/empty_view" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center"
        android:text="@string/empty_msg" android:textAppearance="?android:attr/textAppearanceLarge"
        android:textDirection="locale"
        android:textColor="#FFC0C0C0" />
</RelativeLayout>
