<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_result" android:layout_width="match_parent"
        android:layout_height="32dp" android:visibility="gone"
        android:gravity="center_vertical"
        android:singleLine="true" android:paddingLeft="16dp" 
        android:paddingRight="16dp" android:background="#393939"
        android:textColor="#ffffff" android:textSize="16sp"/>
    <ListView
            android:id="@+id/list_view"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    

</LinearLayout>