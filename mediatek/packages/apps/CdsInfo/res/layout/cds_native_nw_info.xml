<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <TableLayout
            android:layout_width="wrap_content" android:layout_height="wrap_content">
            
            <!--network interface list State-->
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:text="@string/network_list_label" style="@style/info_label" />
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#0000FF"></View>            
            <TableRow  android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:id="@+id/network_list" style="@style/info_value" />
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#FF0000"></View>
        
            <!--network config State-->
            <TableRow  android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:text="@string/network_config_label" style="@style/info_label" />            
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#0000FF"></View>
            <TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:id="@+id/network_config" style="@style/info_value" />
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#FF0000"></View>

            <!--IP route table-->
            <TableRow  android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:text="@string/ip_route_label" style="@style/info_label" />
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#0000FF"></View>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:id="@+id/ip_route" style="@style/info_value" />
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#FF0000"></View>

            <!--IP filter tables-->
            <!--
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:text="@string/ip_tables_label" style="@style/info_label" />
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#0000FF"></View>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:id="@+id/ip_tables" style="@style/info_value" />
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#FF0000"></View>
            -->

        <!--IP filter tables-->
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:text="@string/net_stat_label" style="@style/info_label" />
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#0000FF"></View>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">            
                <TextView android:id="@+id/net_stat" style="@style/info_value" />
            </TableRow>
            <View android:layout_height="1dip" android:layout_width="fill_parent" android:background="#FF0000"></View>
        </TableLayout>

</ScrollView>
