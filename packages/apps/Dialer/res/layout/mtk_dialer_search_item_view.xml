<?xml version="1.0" encoding="utf-8"?>
<com.mediatek.dialer.dialpad.DialerSearchItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialer_search_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/dialer_search_outer_margin"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:attr/selectableItemBackground">

    <com.mediatek.dialer.widget.QuickContactBadgeWithPhoneNumber
        android:id="@+id/quick_contact_photo"
        android:layout_width="@dimen/call_log_list_contact_photo_size"
        android:layout_height="@dimen/call_log_list_contact_photo_size"
        android:focusable="false"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="176dip"
        android:layout_marginTop="8dip"
        android:layout_marginStart="8dip"
        android:textColor="?attr/call_log_primary_text_color"
        android:textSize="18sp"
        style="@style/LongStringSupportSingleLine"/>

    <!--
        <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dip"
        android:layout_marginBottom="8dip"
        android:singleLine="true"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dip"
        android:layout_marginBottom="8dip"
        android:maxWidth="100dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="?attr/call_log_secondary_text_color"
        android:textSize="14sp"/>
     -->

    <TextView
        android:id="@+id/labelAndNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dip"
        android:layout_marginBottom="8dip"
        android:layout_marginEnd="4dip"
        android:maxWidth="170dip"
        android:textSize="14sp"
        style="@style/LongStringSupportSingleLine" />

    <ImageView 
        android:id="@+id/callType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dip"
        android:layout_marginBottom="8dip"/>

    <TextView 
        android:id="@+id/operator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/calllog_list_item_simname_height"
        android:layout_marginStart="8dip"
        android:layout_marginBottom="8dip"
        android:singleLine="true"
        android:textSize="@dimen/calllog_list_item_simname_text_size"
        android:textColor="@color/calllog_list_item_simname_font_color"
        android:maxWidth="@dimen/calllog_list_item_simname_max_length"
        android:ellipsize="middle"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dip"
        android:layout_marginBottom="8dip"
        android:singleLine="true"
        android:textColor="?attr/call_log_secondary_text_color"
        android:textSize="12sp"/>

    <!--
        <com.mediatek.dialer.widget.DontPressWithParentImageButton
        android:id="@+id/call"
        android:layout_width="@dimen/call_log_call_action_width"
        android:layout_height="116px"
        android:src="@drawable/ic_ab_dialer_holo_dark"
        android:scaleType="center"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="gone"/>
     -->
    <View
        android:id="@+id/divider"
        android:layout_width="1px"
        android:layout_height="@dimen/call_log_call_action_size"
        android:background="@drawable/ic_divider_dashed_holo_dark" 
        android:visibility="gone"/>
</com.mediatek.dialer.dialpad.DialerSearchItemView>
