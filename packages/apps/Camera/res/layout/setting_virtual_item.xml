<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:splitMotionEvents="false">
    <TextView android:id="@+id/title"
        style="@style/SettingItemSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:splitMotionEvents="false">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:splitMotionEvents="false">
            <LinearLayout style="@style/SettingVirtualItem">
                <TextView
                    android:id="@+id/title1"
                    style="@style/SettingVirtualTitle" />
                <ImageView
                    android:id="@+id/effectImage1"
                    style="@style/SettingVirtualEffectImage" />
                <RadioButton
                    android:id="@+id/radio1"
                    style="@style/SettingVirtualRadio" />
            </LinearLayout>
            <LinearLayout style="@style/SettingVirtualItem">
                <TextView
                    android:id="@+id/title2"
                    style="@style/SettingVirtualTitle" />
                <ImageView
                    android:id="@+id/effectImage2"
                    style="@style/SettingVirtualEffectImage" />
                <RadioButton
                    android:id="@+id/radio2"
                    style="@style/SettingVirtualRadio" />
            </LinearLayout>
            <LinearLayout style="@style/SettingVirtualItem">
                <TextView
                    android:id="@+id/title3"
                    style="@style/SettingVirtualTitle" />
                <ImageView
                    android:id="@+id/effectImage3"
                    style="@style/SettingVirtualEffectImage" />
                <RadioButton
                    android:id="@+id/radio3"
                    style="@style/SettingVirtualRadio" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
