<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/motion_track_frame_layout"
    style="@style/PanoPreviewLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_weight="1" >

    <include layout="@layout/motion_track_preview_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.android.camera.ui.RotateLayout
        android:id="@+id/motion_track_on_screen_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <include layout="@layout/progress_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp" />
        </RelativeLayout>
    </com.android.camera.ui.RotateLayout>

</RelativeLayout>