<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:paddingEnd="6dip"
        android:paddingStart="6dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">

	<ImageView android:id="@+id/transfer_icon"
			android:layout_width="@android:dimen/app_icon_size"
			android:layout_height="@android:dimen/app_icon_size"
            android:layout_marginEnd="11dip"
            android:scaleType="fitCenter"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"/>

	<TextView android:id="@+id/transfer_file"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:layout_alignParentTop="true"
			android:layout_toEndOf="@id/transfer_icon"
			android:textAppearance="?android:attr/textAppearanceMedium"/>

	<TextView android:id="@+id/modified_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:layout_below="@id/transfer_file"
			android:layout_alignParentEnd="true"
			android:textAppearance="?android:attr/textAppearanceSmall"/>

	<TextView android:id="@+id/transfer_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:layout_below="@id/transfer_file"
			android:layout_toEndOf="@id/transfer_icon"
			android:layout_toStartOf="@id/modified_date"
			android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>
