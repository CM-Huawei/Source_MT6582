<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="1.0">
    <com.android.keyguard.LockScreenNewEventView
        android:id="@+id/new_event_view"
        android:layout_width="68dip"
        android:layout_height="68dip"
        android:background="@drawable/mtk_ic_lockscreen_icon_shadow"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/event_app_icon"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/event_app_unread"
            style="@style/UnreadNumAppearance"
            android:layout_alignTop="@id/event_app_icon"
            android:layout_alignRight="@id/event_app_icon"/>
    </com.android.keyguard.LockScreenNewEventView>
</FrameLayout>
